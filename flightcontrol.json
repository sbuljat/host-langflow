{
  "services": [
    {
      "id": "langflow",
      "type": "web",
      "buildType": "docker",
      "port": 7860,
      // …
      "envVariables": {
        /* provided automatically by your RDS service */
        "LANGFLOW_DATABASE_URL": {
          "fromService": { "id": "db", "value": "dbConnectionString" }
        },

        /* lock down the IDE */
        "LANGFLOW_AUTO_LOGIN": "false",
        "LANGFLOW_SUPERUSER":          { "fromSecretsManager": "arn:aws:secretsmanager:…:langflow-user" },
        "LANGFLOW_SUPERUSER_PASSWORD": { "fromSecretsManager": "arn:aws:secretsmanager:…:langflow-pass" },
        "LANGFLOW_SECRET_KEY":         { "fromSecretsManager": "arn:aws:secretsmanager:…:langflow-key" }
      },

      /* keeps secrets out of the build context */
      "includeEnvVariablesInBuild": false
    }
  ]
}
